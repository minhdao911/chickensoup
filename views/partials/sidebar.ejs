             <h3 id="about">POPULAR BLOGS</h3>
             <hr>
             <% var sortedByPopular = allBlogs %>
             <% for(var i=1; i<allBlogs.length; i++){ %>
                 <% var prePos = i-1 %>
                 <% while(prePos >= 0 && sortedByPopular[prePos].likes + sortedByPopular[prePos].comments.length < sortedByPopular[prePos+1].likes + sortedByPopular[prePos+1].comments.length){ %>
                     <% var temp = sortedByPopular[prePos] %>
                     <% sortedByPopular[prePos] = sortedByPopular[prePos+1] %>
                     <% sortedByPopular[prePos+1] = temp %>
                     <% prePos-- %>
                 <% } %>
             <% } %>
             <% if(allBlogs.length > 5){ %>
                 <% for(var i=0; i<5; i++){ %>
                       <div class="small-index">
                           <img class="small-img" src="<%= sortedByPopular[i].image%>">
                           <a class="small-header" href="/blogs/<%= sortedByPopular[i]._id %>"><%= sortedByPopular[i].title%></a>
                       </div>    
                 <% } %>
             <% } %>
         </div>
         <div class="right-index">
             <h3 id="about">RECENT BLOGS</h3>
             <hr>
             <% var sortedByDate = allBlogs %>
             <% for(var i=1; i<allBlogs.length; i++){ %>
                 <% var prePos = i-1 %>
